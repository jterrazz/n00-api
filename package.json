{
  "name": "n00-api",
  "version": "1.0.0",
  "author": "Jean-Baptiste Terrazzoni <contact@jterrazz.com>",
  "type": "module",
  "engines": {
    "node": "24.x.x"
  },
  "scripts": {
    "build": "prisma generate && ts-build",
    "start": "NODE_ENV=production OTEL_TRACES_EXPORTER=otlp OTEL_EXPORTER_OTLP_ENDPOINT=https://signoz-http.jterrazz.com OTEL_SERVICE_NAME=n00-api OTEL_NODE_RESOURCE_DETECTORS=env,host,os . scripts/env.sh && prisma migrate deploy && node --enable-source-maps --require @opentelemetry/auto-instrumentations-node/register dist/index.js",
    "dev": ". scripts/env.sh && prisma db push && NODE_ENV=development ts-dev",
    "studio": ". scripts/env.sh && prisma studio",
    "test": "vitest --run",
    "lint": "quality",
    "lint:fix": "quality-fix"
  },
  "devDependencies": {
    "@jterrazz/quality": "5.0.1",
    "@jterrazz/test": "3.1.0",
    "@jterrazz/typescript": "3.1.0",
    "@types/node": "^25.0.0"
  },
  "dependencies": {
    "@date-fns/tz": "^1.4.1",
    "@hono/node-server": "^1.19.7",
    "@jterrazz/intelligence": "^3.0.1",
    "@jterrazz/logger": "^1.5.0",
    "@jterrazz/monitoring": "^1.0.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.2",
    "@opentelemetry/sdk-metrics": "^2.2.0",
    "@prisma/adapter-better-sqlite3": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "@snap/ts-inject": "^0.3.2",
    "ai": "^5.0.112",
    "config": "^4.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "hono": "^4.10.8",
    "node-cron": "^4.2.1",
    "prisma": "^7.1.0",
    "zod": "^4.1.13"
  }
}
