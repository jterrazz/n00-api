{
  "name": "fakenews-api",
  "version": "1.0.0",
  "author": "Jean-Baptiste Terrazzoni <contact@jterrazz.com>",
  "type": "module",
  "engines": {
    "node": "22.x.x"
  },
  "scripts": {
    "build": "prisma generate && ts-build",
    "start": "NODE_ENV=production . scripts/env.sh && prisma migrate deploy && node --enable-source-maps -r newrelic dist/index.js",
    "dev": ". scripts/env.sh && prisma db push && NODE_ENV=development ts-dev",
    "studio": ". scripts/env.sh && prisma studio",
    "test": "vitest --run",
    "lint": "quality",
    "lint:fix": "quality-fix"
  },
  "devDependencies": {
    "@jterrazz/quality": "4.0.4",
    "@jterrazz/test": "3.0.0",
    "@jterrazz/typescript": "3.0.0",
    "@types/config": "^3.3.5",
    "@types/node": "^22.15.30"
  },
  "dependencies": {
    "@date-fns/tz": "^1.4.1",
    "@hono/node-server": "^1.19.6",
    "@jterrazz/intelligence": "^2.0.0",
    "@jterrazz/logger": "^1.5.0",
    "@jterrazz/monitoring": "^1.0.0",
    "@prisma/client": "^6.16.0",
    "@snap/ts-inject": "^0.3.2",
    "config": "^3.3.12",
    "date-fns": "^4.1.0",
    "hono": "^4.10.7",
    "node-cron": "^4.2.1",
    "prisma": "^6.16.0",
    "zod": "^3.25.67"
  }
}
